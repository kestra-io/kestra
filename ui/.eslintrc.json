{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-strongly-recommended",
    "eslint:recommended"
  ],
  "rules": {
    "vue/html-indent": [
      "error",
      4,
      {
        "baseIndent": 1
      }
    ],
    "vue/script-indent": [
      "error",
      4,
      {
        "baseIndent": 1
      }
    ],
    "vue/max-attributes-per-line": [
      "error",
      {
        "singleline": 7
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "vue/object-curly-spacing": [
      "error",
      "never"
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "vue/multi-word-component-names": [
      "off"
    ]
  }
}